    private void Action(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_Action
        switch (evt.getActionCommand()) {

            case "Circle": {
                String radiusInput = JOptionPane.showInputDialog(this, "Enter radius:");
                if (radiusInput != null) {
                    try {
                        radius = Integer.parseInt(radiusInput);
                        color = JColorChooser.showDialog(this, "Choose Circle Color", Color.BLACK);
                        fillColor = JColorChooser.showDialog(this, "Choose Fill in Circle Color", Color.BLACK);
                        if (color != null) {
                            isDrawingCircle = true;
                        }
                        drawing.addMouseListener(new MouseAdapter() {
                            @Override
                            public void mouseClicked(MouseEvent e) {
                                if (isDrawingCircle) {
                                    Point position = new Point();
                                    position.x = e.getX();
                                    position.y = e.getY();
                                    Shape c = new Circle(radius, position, color, fillColor);
                                    c.draw(g);
                                    shapes.addShape(c);
                                    shapesBox.addItem(c);
                                    isDrawingCircle = false;
                                }
                            }
                        });
                    } catch (NumberFormatException ex) {
                        JOptionPane.showMessageDialog(this, "Invalid radius entered!", "Error", JOptionPane.ERROR_MESSAGE);
                    }
                }
                this.setVisible(true);

                break;
            }
            case "Rectangle": {
                String lengthInput = JOptionPane.showInputDialog(this, "Enter Lenght:");
                String widthInput = JOptionPane.showInputDialog(this, "Enter Width:");
                if (lengthInput != null && widthInput != null) {
                    try {
                        lenght = Integer.parseInt(lengthInput);
                        width = Integer.parseInt(widthInput);
                        color = JColorChooser.showDialog(this, "Choose Rectangle Color", Color.BLACK);
                        fillColor = JColorChooser.showDialog(this, "Choose Fill in Rectangle Color", Color.BLACK);
                        if (color != null) {
                            isDrawingRect = true;
                        }
                        drawing.addMouseListener(new MouseAdapter() {
                            @Override
                            public void mouseClicked(MouseEvent e) {
                                if (isDrawingRect) {
                                    Point position = new Point();
                                    position.x = e.getX();
                                    position.y = e.getY();
                                    Shape k = new Rectangle(lenght, width, position, color, fillColor);
                                    k.draw(g);
                                    shapes.addShape(k);
                                    shapesBox.addItem(k);
                                    isDrawingRect = false;
                                }
                            }

                        }
                        );
                    } catch (NumberFormatException ex) {
                        JOptionPane.showMessageDialog(this, "Invalid Lenght or Width entered!", "Error", JOptionPane.ERROR_MESSAGE);
                    }

                }
                this.setVisible(true);

                break;
            }

            case "Square": {
                String lengthInput2 = JOptionPane.showInputDialog(this, "Enter Lenght:");

                if (lengthInput2 != null) {
                    try {
                        lenght = Integer.parseInt(lengthInput2);

                        color = JColorChooser.showDialog(this, "Choose Square Color", Color.BLACK);
                        fillColor = JColorChooser.showDialog(this, "Choose Fill in Square Color", Color.BLACK);

                        if (color != null) {
                            isDrawingSquare = true;
                        }
                        drawing.addMouseListener(new MouseAdapter() {

                            @Override
                            public void mouseClicked(MouseEvent e) {
                                if (isDrawingSquare) {
                                    Point position = new Point();
                                    position.x = e.getX();
                                    position.y = e.getY();
                                    Shape s = new Square(lenght, lenght, position, color, fillColor);
                                    s.draw(g);
                                    shapes.addShape(s);
                                    shapesBox.addItem(s);
                                    isDrawingSquare = false;
                                }
                            }
                        });
                    } catch (NumberFormatException ex) {
                        JOptionPane.showMessageDialog(this, "Invalid Legnth entered!", "Error", JOptionPane.ERROR_MESSAGE);
                    }

                }
                this.setVisible(true);

                break;
            }

            case "Line Segment": {
                String lengthInput = JOptionPane.showInputDialog(this, "Enter Lenght:");
                String slopeInput = JOptionPane.showInputDialog(this, "Enter Slope:");
                if (lengthInput != null && slopeInput != null) {
                    try {
                        lenght = Integer.parseInt(lengthInput);
                        slope = Integer.parseInt(slopeInput);
                        color = JColorChooser.showDialog(this, "Choose Line Color", Color.BLACK);
                        if (color != null) {
                            isDrawingLine = true;
                        }
                        drawing.addMouseListener(new MouseAdapter() {

                            @Override
                            public void mouseClicked(MouseEvent e) {
                                if (isDrawingLine) {
                                    Point position = new Point();
                                    position.x = e.getX();
                                    position.y = e.getY();
                                    Point position1 = new Point();
                                    double slope1 = Math.toRadians(-slope);
                                    position1.x = (int) Math.round(position.x + lenght * Math.cos(slope1));
                                    position1.y = (int) Math.round(position.y + lenght * Math.sin(slope1));
                                    Shape m = new LineSegment(position, position1, color, lenght, slope);
                                    m.draw(g);
                                    shapes.addShape(m);
                                    shapesBox.addItem(m);
                                    isDrawingLine = false;
                                }
                            }
                        });
                    } catch (NumberFormatException ex) {
                        JOptionPane.showMessageDialog(this, "Invalid Lenght or Slope entered!", "Error", JOptionPane.ERROR_MESSAGE);
                    }

                }
                this.setVisible(true);

                break;
            }

        }
      }//GEN-LAST:event_Action

    private void deleteActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_deleteActionPerformed
        Shape shape = (Shape) shapesBox.getSelectedItem();
        if (shape != null) {
            shapes.removeShape(shape);
            shapesBox.removeItem(shape);
            drawing.paint(g);
            shapes.refresh(g);
        }
    }//GEN-LAST:event_deleteActionPerformed

