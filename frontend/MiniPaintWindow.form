    private void colorizeActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_colorizeActionPerformed
        Shape shape = (Shape) shapesBox.getSelectedItem();

        if (shape != null) {

            Color newColor = JColorChooser.showDialog(this, "Choose Color", Color.white);
            if (newColor != null) {
                if ("Line".equals(shapesBox.getSelectedItem().toString().substring(0, 4))) {
                    shape.setColor(newColor);
                    drawing.paint(g);
                    shapes.refresh(g);
                } else {
                    shape.setFillColor(newColor);
                    drawing.paint(g);
                    shapes.refresh(g);
                }

            }

        }    }//GEN-LAST:event_colorizeActionPerformed

    private void drawingMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_drawingMouseClicked

        drawing.addMouseListener(new MouseAdapter() {
            @Override
            public void mouseClicked(MouseEvent e) {
                Point clickPoint = e.getPoint();
                for (Shape shape : shapes.getShapes()) {
                    if (shape.contains(clickPoint)) {
                        shapesBox.setSelectedItem(shape);
                        break;
                    }
                }

            }
        });

    }//GEN-LAST:event_drawingMouseClicked

    private void ResizeActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_ResizeActionPerformed
        Shape shape = (Shape) shapesBox.getSelectedItem();
        try {
            if (shape != null) {

                if (shape instanceof LineSegment) {
                    String lengthInput = JOptionPane.showInputDialog(this, "Enter Lenght:");
                    lenght = Integer.parseInt(lengthInput);
                    LineSegment newshape = (LineSegment) shape;
                    Point position = new Point();
                    position.x = (int) Math.round(shape.getPosition().x + lenght * Math.cos(Math.toRadians(-newshape.getSlope())));
                    position.y = (int) Math.round(shape.getPosition().y + lenght * Math.sin(Math.toRadians(-newshape.getSlope())));
                    newshape.setLenght(lenght);
                    newshape.setPoint(position);
                    shape = (Shape) newshape;
                    drawing.paint(g);
                    shapes.refresh(g);

                }
                if (shape instanceof Circle) {
                    String radiusInput = JOptionPane.showInputDialog(this, "Enter radius:");
                    radius = Integer.parseInt(radiusInput);
                    shape.resize(radius, 0);
                    drawing.paint(g);
                    shapes.refresh(g);
                }
                if (shape instanceof Rectangle && !(shape instanceof Square)) {
                    String lengthInput = JOptionPane.showInputDialog(this, "Enter Lenght:");
                    String widthInput = JOptionPane.showInputDialog(this, "Enter Width:");
                    lenght = Integer.parseInt(lengthInput);
                    width = Integer.parseInt(widthInput);
                    shape.resize(lenght, width);
                    drawing.paint(g);
                    shapes.refresh(g);
                }
                if (shape instanceof Square) {
                    String lengthInput = JOptionPane.showInputDialog(this, "Enter Lenght:");
                    lenght = Integer.parseInt(lengthInput);
                    shape.resize(lenght, lenght);
                    drawing.paint(g);
                    shapes.refresh(g);
                }
            }
        } catch (NumberFormatException ex) {
            JOptionPane.showMessageDialog(this, "Invalid !", "Error", JOptionPane.ERROR_MESSAGE);
        }
    }//GEN-LAST:event_ResizeActionPerformed

