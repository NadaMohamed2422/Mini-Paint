    private void LoadActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_LoadActionPerformed
        JFileChooser file = new JFileChooser();
        file.setDialogTitle("Files");
        int selection = file.showOpenDialog(drawing);
        if (selection == JFileChooser.APPROVE_OPTION) {
            File name = file.getSelectedFile();
            ArrayList<Shape> currentShapes = new ArrayList<>(shapes.getShapes());
            for (Shape shape : currentShapes) {
                shapes.removeShape(shape);
                shapesBox.removeItem(shape);

            }
            drawing.paint(g);
            shapes.refresh(g);
            shapes.load(name);
            drawing.paint(g);
            shapes.refresh(g);
            for (Shape shape : shapes.getShapes()) {
                shapesBox.addItem(shape);
            }

        }


    }//GEN-LAST:event_LoadActionPerformed

    private void SaveActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_SaveActionPerformed
        JFileChooser file = new JFileChooser();
        file.setDialogTitle("Save");
        int selection = file.showSaveDialog(drawing);
        if (selection == JFileChooser.APPROVE_OPTION) {
            File name = file.getSelectedFile();
            shapes.save(name);
        }

    }//GEN-LAST:event_SaveActionPerformed

