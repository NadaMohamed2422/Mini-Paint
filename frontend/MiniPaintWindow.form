    private void drawingMouseDragged(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_drawingMouseDragged
        Shape shape = (Shape) shapesBox.getSelectedItem();
        Point currentDragPoint = evt.getPoint();

        if (moving) {
            if (shape != null && currentDragPoint != null) {

                shape.setPosition(currentDragPoint);
                drawing.paint(g);
                shapes.refresh(g);

            }
            if (shape instanceof LineSegment) {
                LineSegment line = (LineSegment) shape;
                Point position = new Point();
                position.x = (int) Math.round(shape.getPosition().x + line.getLenght() * Math.cos(Math.toRadians(-line.getSlope())));
                position.y = (int) Math.round(shape.getPosition().y + line.getLenght() * Math.sin(Math.toRadians(-line.getSlope())));
                line.setPoint(position);
                drawing.paint(g);
                shapes.refresh(g);

            }
        }

    }//GEN-LAST:event_drawingMouseDragged

